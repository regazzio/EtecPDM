        tipo = "isósceles"
    } else {
        tipo = "escaleno"
    }
*/

    tipo = "ESCALENO"
    if (lado1 == lado2 && lado1 == lado3) {
        tipo = "EQUILÁTERO"
    } else if (lado1 == lado2 || lado1 == lado3 || lado2 == lado3) {
        tipo = "ISÓSCELES"
    }

    println("É um triângulo $tipo")
}
