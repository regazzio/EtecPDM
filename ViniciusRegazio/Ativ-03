fun main(){
  // Operadores Aritmeticos
    var idade = 20
    //idade = idade + 1
    idade += 1 //soma +1
    //idade = idade -5
    idade -= 5 //subtração (-)
    //idade = idade * 2
    idade *= 2 //multiplicação (*)
    //idade = idade / 2
    idade /= 3 //divisão (/)
    //idade = idade % 3
    idade %= 3
    println("Quantos anos tem esse prédio? Deve ter uns $idade.")

}
