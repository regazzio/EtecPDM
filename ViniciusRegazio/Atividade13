fun main() {
    // quadrado()
    // triangulo()
}
fun quadrado() {
    
    println("Digite o comprimento do primeiro lado (maior que zero): ")
    val lado1 = readLine()?.toIntOrNull() ?: 0

    println("Digite o comprimento do segundo lado (maior que zero): ")
    val lado2 = readLine()?.toIntOrNull() ?: 0

    if (lado1 > 0 && lado2 > 0) {
        // Verifica se é um quadrado ou retângulo
        if (lado1 == lado2) {
            println("A figura é um quadrado.")
        } else {
            println("A figura é um retângulo.")
        }
    } else {
        println("Por favor, digite números inteiros maiores que zero.")
    }
}
